<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green_bg"
    android:padding="16dp">

    <TextView
        android:id="@+id/list_id_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:background="@color/off_white"
        android:textSize="18sp"
        android:padding="5dp"
        android:textColor="@color/green_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_name_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:background="@color/white_bg_btn"
        android:textSize="18sp"
        android:padding="5dp"
        android:textColor="@color/blue_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_id_results" />


    <TextView
        android:id="@+id/list_gender_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:background="@color/off_white"
        android:textSize="18sp"
        android:padding="5dp"
        android:textColor="@color/blue_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_name_results" />

    <TextView
        android:id="@+id/list_party_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:background="@color/white_bg_btn"
        android:textSize="18sp"
        android:padding="5dp"
        android:textColor="@color/blue_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_gender_results" />


